{% extends 'base.html.twig' %}

{% block title %}Result Search{% endblock %}

{% block body %}
    <h1>List of before search</h1>
    {% if books|length != 0 %}
        <h2>Books found</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    Author
                </td>
                <td>
                    Action
                </td>
            </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>
                        {{ book.name }}
                    </td>
                    <td>
                        {{ book.author }}
                    </td>
                    <td>
                        <a href="{{ path('app_book_details',{ book : book.id } ) }}">Details</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    {% if author|length != 0 and books|length != 0 %}
        <hr class="my-4">
    {% endif %}
    {% if author|length != 0 %}
        <h2>Books by author found</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    Author
                </td>
                <td>
                    Action
                </td>
            </tr>
            </thead>
            <tbody>
            {% for book in author %}
                <tr>
                    <td>
                        {{ book.name }}
                    </td>
                    <td>
                        {{ book.author }}
                    </td>
                    <td>
                        <a href="{{ path('app_book_details',{ book : book.id } ) }}">Details</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}
