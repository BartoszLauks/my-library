{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
    <h2>List of Books</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <td>
                Name
            </td>
            <td>
                Author
            </td>
            <td>
                Publishing house
            </td>
            <td>
                Place of publication
            </td>
            <td>
                Date of publication
            </td>
            <td>
                Actions
            </td>
            <td>
                Pages
            </td>
            <td>
                Description
            </td>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    {{ book.name }}
                </td>
                <td>
                    {{ book.author }}
                </td>
                <td>
                    {{ book.publishingHouse }}
                </td>
                <td>
                    {{ book.placeOfPublication }}
                </td>
                <td>
                    {{ book.DateOfPublication }}
                </td>
                <td>
                    {{ book.page }}
                </td>
                <td>
                    {{ book.description }}
                </td>
                <td>
                    <a href="{{ path('app_add_book_to_library',{book : book.id} ) }}">Add to library</a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
